<settings xmlns="http://maven.apache.org/SETTINGS/1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0 http://maven.apache.org/xsd/settings-1.1.0.xsd">

    <servers>
        <server>
            <id>registry.hub.docker.com</id>
            <username><DockerHub Username="${env.DOCKER_USERNAME}"></username>
            <password><DockerHub Password="${env.DOCKER_PASSWORD}"></password>
        </server>
    </servers>


    <profiles>
        <profile>
            <id>default</id>
            <properties>
                <image-name>${env.IMAGE_REGISTRY}/${env.IMAGE_REPO}</image-name>
                <image-tag>${env.IMAGE_TAG}</image-tag>
            </properties>
        </profile>
    </profiles>
    <activeProfiles>
        <activeProfile>default</activeProfile>
    </activeProfiles>
</settings>
